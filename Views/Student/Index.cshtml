@model IEnumerable<CrudApplication.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Employee Record</h1>
            <a class="btn btn-sm btn-success m-1" asp-controller="Student" asp-action="Create">Create</a>
            <p class="text-center text-success">@TempData["error"]</p>
            <table class="table table-bordered">
                <tr class="text-center">
                    <td>StudentID</td>
                    <td>Name</td>
                    <td>Age</td>
                    <td>Address</td>
                    <td>Phone</td>
                    <td>Action</td>


                </tr>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.Name</td>
                        <td>@d.Age</td>
                        <td>@d.Address</td>
                        <td>@d.Phone</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-controller="Student" asp-action="Edit" asp-route-id="@d.Id">Edit</a>


                            <a class="btn btn-sm btn-warning" asp-controller="Student" asp-action="Delete" asp-route-id="@d.Id">Delete</a>

                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>
 

